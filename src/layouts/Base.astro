---
interface Props {
    title: string;
    description?: string;
    headerStyle?: 'index' | 'post';
}

const { title, description = "A blog written by Noah Mancino.", headerStyle = 'index' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={headerStyle === 'post' ? 'article' : 'website'} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,500;0,8..60,600;0,8..60,700;1,8..60,400;1,8..60,500&display=swap" rel="stylesheet" />
</head>
<body>

<header class={`site-header site-header--${headerStyle}`}>
    <h1 class="site-title">
        {headerStyle === 'post'
            ? <a href="/">Noah Mancino</a>
            : 'Noah Mancino'
        }
    </h1>
</header>

<slot />

</body>
</html>
